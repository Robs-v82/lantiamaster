<div class="row">
  <div class="col s11 offset-s1">
    <div class="input-field short-row">
      <select id="operation-city-selector" class="admins-select browser-default" name="query[city_id]">
        <option value="" selected>Todas</option>
        <% @cities.each do |city|%>
          <option value="<%= city.id %>"><%= city.name%></option>
        <% end %>
      </select>
    </div>
    <div class="label-row">
      <label class="white-text" for="operation-city-selector">Z. METROPOLITANA</label>
    </div>
  </div>
</div>