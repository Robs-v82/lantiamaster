<div class="row">
    <div class="col s5">
        <div class="input-field short-row">
            <select id="operation-organization-selector" class="admins-select browser-default" name="query[organization_id]">
                <option value="" selected>Todas</option>
                <% @media_sites.each do |media|%>
                    <option value="<%= media.id %>"><%= media.name%></option>
                <% end %>
            </select>
        </div>
        <div class="label-row">
            <label class="grey-text text-darken-4" for="operation-organization-selector">MEDIO</label>
        </div>
    </div>
    <div class="col s5">
        <div class="input-field short-row">
            <select id="operation-member-selector" disabled class="admins-select browser-default" name="query[member_id]">
            </select>
        </div>
        <div class="label-row">
            <label class="grey-text text-darken-4" for="operation-member-selector">AUTOR</label>
        </div>
    </div>
</div>